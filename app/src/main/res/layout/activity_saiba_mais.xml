<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".SaibaMais">

    <View
        style="@style/Fundo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:textColor="@color/branco"
        android:textSize="30sp"
        android:fontFamily="@font/poppins"
        android:text="Saiba Mais" />

    <ImageView
        android:id="@+id/seta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="340dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/texto1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        android:layout_marginTop="20dp"
        android:textColor="@color/preto"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:text="Aqui iremos dar uma breve explicação de cada aba do nosso aplicativo! " />

    <View
        style="@style/Fundo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="340dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/home"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/texto1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/texto2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/preto"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:text="Essa aba tem como função levar o usuário para a parte inicial do aplicativo. " />

    <View
        style="@style/Fundo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="340dp"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/pesquisa"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/busca"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/texto2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/texto3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/pesquisa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/preto"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:text="Ao clicar nesse ícone, você será direcionado para uma Aba de pesquisa onde você poderá buscar pela obra desejada e saber se ela  encontra-se disponível no aplicativo. " />

    <View
        style="@style/Fundo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="340dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pessoa"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/texto3"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/texto4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/preto"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:text="Esse ícone corresponde a aba de  Usuário. Lá encontra-se todos os dados do leitor e livros já lidos." />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>